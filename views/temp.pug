script.
  var ua = navigator.userAgent.toLowerCase()
  function is(key) {
    return ua.indexOf(key) > -1;
  }
  /**
  * Shuffles array in place.
  * @param {Array} a items An array containing the items.
  */
  function shuffle(a) {
      var j, x, i;
      for (i = a.length - 1; i > 0; i--) {
          j = Math.floor(Math.random() * (i + 1));
          x = a[i];
          a[i] = a[j];
          a[j] = x;
      }
      return a;
  }
  function shuffleLangs() {
    $('.langs').html(
      shuffle($('.langs a').toArray())
        .reduce(function(prev, curr) {
          return prev + $(curr).wrapAll('<div>').parent().html()
        }, '')
    )
  }
  $(function() {
    var os = 'windows'
    var d = new Date("#{releaseDate}")
    var y = d.getFullYear()
    var m = d.getMonth()
    var dd = d.getDate()
    m = m > 9 ? m + 1 : '0' + (m + 1)
    dd = dd > 9 ? dd : '0' + dd
    var dt = y + '-' + m + '-' + dd
    $('.release-date').html(dt)
    shuffleLangs()
    $('.langs a[href="' + location.pathname + '"]').addClass('active')
    if (is('linux')) {
      os = 'linux'
    } else if (is('mac') || is('darwin')) {
      os = 'mac'
    }
    $('[data-os="' + os + '"]').click()
  })
include parts/footer-end