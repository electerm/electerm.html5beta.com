script.
  let ua = navigator.userAgent.toLowerCase()
  function is(key) {
    return ua.indexOf(key) > -1;
  }
  $(function() {
    let os = 'windows'
    if (is('linux')) {
      os = 'linux'
    } else if (is('mac') || is('darwin')) {
      os = 'mac'
    }
    $('[data-os="' + os + '"]').click()
  })
