

body
  background #000
  color #aaa

#main
  min-height 1600px
  background #fff

#menus .lists a
  padding 10px 25px
  display block
  border-radius 5px
  &:hover
    background #ddd
    
  &.active
    background #08c
    color #eee
.badges
  a, span
    height 20px
    display inline-block
    vertical-align middle
    margin 0 4px 4px 0
  span
    margin-top 10px
.jumbotron
  background #fff

.max-100
  max-width 100%
.e-gif
  box-shadow 0px 0px 40px 3px rgba(0,0,0,0.75)
  border 1px solid #555
  border-radius 10px
  width 100%

#ubg
  position fixed
  left 0
  right 0
  top 0
  bottom 0
  background #000
  z-index 0
#content
  position relative
  z-index 1
  .list-group-item
    background none
    border-color #555
  .card
    border-color #555
    background rgba(0, 0, 0, .89)
  .card-header
    background rgba(0, 0, 0, .89)
    border-color #555
hr
  border-color #555
.big-logo img
  filter invert(80%)
  opacity .89

.langs a
  padding 0px 0px 0px 4px
  margin-left 2px
  display inline-block
  position relative
  z-index 2

.langs .active:before, .langs a:hover:after
  position absolute
  content ''
  left 3px
  top calc(100% + 2px)
  right 3px
  bottom -3px
  text-decoration none
  background #08c
  z-index 1

.font14
  font-size 14px
