
style.
  .videos-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 2rem;
    padding: 0;
  }

  .video-card {
    display: block;
    background: white;
    border-radius: 12px;
    overflow: hidden;
    text-decoration: none;
    color: inherit;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    border: 1px solid #e8e8e8;
  }

  .video-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 8px 24px rgba(0,0,0,0.15);
  }

  .video-card-thumbnail {
    position: relative;
    padding-bottom: 56.25%;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    overflow: hidden;
  }
  
  .video-card-thumbnail img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.3s ease;
  }
  
  .video-card:hover .video-card-thumbnail img {
    transform: scale(1.05);
  }
  
  .video-duration-badge {
    position: absolute;
    bottom: 10px;
    right: 10px;
    background: rgba(0,0,0,0.85);
    color: white;
    padding: 4px 8px;
    border-radius: 4px;
    font-size: 0.8rem;
    font-weight: 600;
    letter-spacing: 0.5px;
  }
  
  .video-card-content {
    padding: 1.25rem;
  }
  
  .video-card-title {
    font-size: 1.1rem;
    margin: 0 0 1rem 0;
    color: #222;
    font-weight: 600;
    line-height: 1.4;
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    min-height: 2.8em;
  }
  .lang-switcher {
      display: inline-flex;
      margin-bottom: 1.5rem;
      border: 2px solid #ddd;
      border-radius: 6px;
      overflow: hidden;
    }

    .lang-btn {
      padding: 0.5rem 1rem;
      border: none;
      background: white;
      color: #666;
      cursor: pointer;
      font-weight: 500;
      transition: all 0.2s ease;
      border-right: 1px solid #ddd;
    }

    .lang-btn:last-child {
      border-right: none;
    }

    .lang-btn:hover {
      background: #f5f5f5;
      color: #00a1d6;
    }
    
    .lang-btn.active {
      background: #00a1d6;
      color: white;
    }
    .video-player-wrapper {
      position: relative;
      padding-bottom: 56.25%;
      height: 0;
      overflow: hidden;
      background: #000;
      border-radius: 8px;
      margin-bottom: 1.5rem;
    }

    .video-player {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      border: 0;
    }

  @media (max-width: 1024px) {
    .videos-grid {
      grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
      gap: 1.5rem;
    }
  }
  
  @media (max-width: 768px) {
    .videos-title {
      font-size: 2rem;
    }
    
    .videos-grid {
      grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
      gap: 1rem;
    }
    
    .video-card-content {
      padding: 1rem;
    }
    
    .video-card-title {
      font-size: 1rem;
    }
  }
  
  @media (max-width: 480px) {
    .videos-grid {
      grid-template-columns: 1fr;
    }
  }